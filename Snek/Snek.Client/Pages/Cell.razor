<span id="@(Row + '-' + Col)" class="snek-cell @ExtraCss"></span>

@code {
    [Parameter]
    public int Row { get; set; }
    [Parameter]
    public int Col { get; set; }
    [Parameter]
    public CellsType Value { get; set; }
    [Parameter]
    public Direction SnekDirection { get; set; }

    private string ExtraCss = "";

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        switch (Value)
        {
            case CellsType.SnekHead:
                string rotationDir = SnekDirection.ToString();
                ExtraCss = $"snek-cell-head snek-head-{rotationDir.ToLower()}";
                break;
            case CellsType.Snek:
                ExtraCss = "snek-cell-snek";
                break;
            case CellsType.Food:
                ExtraCss = "snek-cell-food";
                break;
            default:
                ExtraCss = "snek-cell-empty";
                break;
        }
    }
}
